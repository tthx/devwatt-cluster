#!/bin/bash
user="${3:-"attu7372"}";
nodes="${4:-"master worker-1 worker-2 worker-3 worker-4"}";
nodes="${4:-"10.171.46.145 10.171.46.120 10.171.46.149 10.171.46.166 10.171.46.168"}";
for i in ${nodes};
do
  echo "-- node: ${i} --";
	scp -i $HOME/.ssh/devwatt1024 -r "${1}" "${user}@${i}:${2}";
done
