#!/bin/bash
user="${1:-"ubuntu"}";
nodes="${2:-"10.171.46.145:192.168.0.33 10.171.46.120:192.168.0.35 10.171.46.149:192.168.0.34 10.171.46.166:192.168.0.37 10.171.46.168:192.168.0.36"}";
for node in ${nodes};
do
  key=${node%%:*}
  value=${node#*:}
  echo "-- node: ${key} --";
  /usr/bin/sshuttle -r ${user}@${key} -e "ssh -i $HOME/.ssh/devwatt1024 -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes" ${value} --pidfile=/tmp/sshuttle-${key}.pid --python /usr/bin/python3 &>/dev/null &disown;
done
