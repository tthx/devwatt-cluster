#!/bin/bash
user="${1:-"ubuntu"}";
nodes="${2:-"10.171.46.145:192.168.0.28 10.171.46.120:192.168.0.29 10.171.46.149:192.168.0.30 10.171.46.166:192.168.0.32 10.171.46.168:192.168.0.31"}";
for node in ${nodes};
do
  key=${node%%:*}
  value=${node#*:}
  echo "-- node: ${key} --";
  /usr/bin/sshuttle -r ${user}@${key} -e "ssh -i $HOME/.ssh/devwatt1024 -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes" ${value} --pidfile=/tmp/sshuttle-${key}.pid --python /usr/bin/python &>/dev/null &disown;
done
